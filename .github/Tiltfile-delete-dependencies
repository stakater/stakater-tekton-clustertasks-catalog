include('Tiltfile-setup-dependencies')

def delete_operator():
    print('Deleting Pipelines Operator')
    local('helm uninstall rh-openshift-pipelines-operator || true')

def delete_instance():
    print('Deleting Pipelines Instance')
    local('helm uninstall rh-openshift-pipelines-instance || true')

def delete_tektoninstallersets():
    print('Waiting 30s for Operator to uninstall')
    local('sleep 30')
    print('Deleting/Patching TektonInstallerSets')
    local('kubectl get tektoninstallersets -o name | xargs -r -n 1 kubectl delete --wait=false')
    local('kubectl get tektoninstallersets -o name | xargs -r -n 1 kubectl patch -p \'{"metadata":{"finalizers":null}}\' --type=merge')
    
def delete_crds():
    print('Deleting Operator CRDs')
    local('kubectl get crds -o name | grep \'operator\\.tekton\\.dev\' | xargs -r -n 1 kubectl delete')

delete_instance()
delete_operator()
delete_tektoninstallersets()
delete_crds()